</div><!-- /container -->
  
<!-- Footer with control panel -->
<footer class="app-footer">
  <div class="container">
    <div class="footer-content">
      <div class="copyright">
        &copy; <%= brand.copyright %>
      </div>
      <div class="demo-panel">
        <% if (typeof session !== 'undefined' && session.memberId) { %>
          <!-- Control to delete individual account (only if there's an active session) -->
          <form method="POST" action="/reset-account" onsubmit="return confirm('Are you sure you want to delete your account and restart the demo? This action cannot be undone.')" style="display: inline-block;">
            <button type="submit" class="btn btn-sm btn-warning">Delete my account and restart demo</button>
          </form>
        <% } %>
      </div>
    </div>
  </div>
</footer>

<!-- jQuery, Popper.js, and Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<!-- Custom JS -->
<script src="/js/main.js"></script>

<!-- Script to show debug information in development -->
<% if (process.env.NODE_ENV === 'development') { %>
<script>
  console.log('=== <%= brand.name.toUpperCase() %> LOYALTY CLUB DEBUG INFO ===');
  <% if (typeof member !== 'undefined' && member) { %>
    console.log('Current user:', '<%= member.name %> (<%= member.email %>)');
    console.log('Session ID:', '<%= member.id %>');
    console.log('Level points:', '<%= member.levelPoints %>');
    console.log('Reward points:', '<%= member.rewardPoints %>');
    console.log('Tier:', '<%= member.tier %>');
  <% } else { %>
    console.log('No authenticated user');
  <% } %>
  console.log('Total registered users:', 'Not available on client');
  console.log('=====================================');
</script>
<% } %>
</body>
</html>